<html>
<head>
  <title>Speed meter</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/highcharts-more.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.14.3/ui-bootstrap-tpls.js"></script>
<script src="https://rawgit.com/rzajac/angularjs-slider/master/dist/rzslider.js"></script>
<link href="./rzslider.css" rel="stylesheet" />
<script>
var app = angular.module('rzSliderDemo', ['rzModule', 'ui.bootstrap']);

app.controller('MainCtrl', function ($scope, $rootScope, $timeout, $modal) {
    //Down payment
    $scope.loadPaymentChart = loadPaymentChart;
    $scope.changePaymentPoint = changePaymentPoint;
    $scope.paymentChart = null;

    $scope.payment_slider_callbacks = {
        value: 0,
        options: {
            floor: 0,
            ceil: 200,
            onStart: function () {
                $scope.paymentData.start = 0;
            },
            onChange: changePaymentPoint,
            onEnd: function () {
                $scope.paymentData.end = 0;
            }
        }
    };
    $scope.paymentData = {
        start: 0,
        change: 0,
        end: 0
    };

    function loadPaymentChart() {
        Highcharts.chart('paymentcontainer', {

            chart: {
                type: 'gauge',
                plotBackgroundColor: 'grey',
                plotBackgroundImage: null,
                plotBorderWidth: 0,
                plotShadow: false
            },

            title: {
                text: 'Down Payment'
            },

            pane: {
                startAngle: -150,
                endAngle: 150,
                background: [{
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#FFF'],
                            [1, '#333']
                        ]
                    },
                    borderWidth: 0,
                    outerRadius: '109%'
                }, {
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#333'],
                            [1, '#FFF']
                        ]
                    },
                    borderWidth: 1,
                    outerRadius: '107%'
                }, {
                    // default background
                }, {
                    backgroundColor: '#DDD',
                    borderWidth: 0,
                    outerRadius: '105%',
                    innerRadius: '103%'
                }]
            },

            // the value axis
            yAxis: {
                min: 0,
                max: 200,

                minorTickInterval: 'auto',
                minorTickWidth: 1,
                minorTickLength: 10,
                minorTickPosition: 'inside',
                minorTickColor: '#666',

                tickPixelInterval: 30,
                tickWidth: 2,
                tickPosition: 'inside',
                tickLength: 10,
                tickColor: '#666',
                labels: {
                    step: 2,
                    rotation: 'auto'
                },
                title: {
                    text: 'km/h'
                },
                plotBands: [{
                    from: 0,
                    to: 120,
                    color: '#55BF3B' // green
                }, {
                    from: 120,
                    to: 160,
                    color: '#DDDF0D' // yellow
                }, {
                    from: 160,
                    to: 200,
                    color: '#DF5353' // red
                }]
            },

            series: [{
                name: 'Speed',
                data: [80],
                tooltip: {
                    valueSuffix: ' km/h'
                }
            }]

        },
        // Add some life
        function (chart) {
            if (!chart.renderer.forExport) {
                $scope.paymentChart = chart;
                $scope.changePaymentPoint();
            }
        });
    }

    function changePaymentPoint() {
      var point = $scope.paymentChart.series[0].points[0];
      $scope.paymentData.change = $scope.payment_slider_callbacks.value;
      point.update($scope.payment_slider_callbacks.value);
    }

    $scope.loadPaymentChart();


    //term
    $scope.loadTermChart = loadTermChart;
    $scope.changeTermPoint = changeTermPoint;
    $scope.termChart = null;

    $scope.term_slider_callbacks = {
        value: 0,
        options: {
            floor: 0,
            ceil: 200,
            onStart: function () {
                $scope.termData.start = 0;
            },
            onChange: changeTermPoint,
            onEnd: function () {
                $scope.termData.end = 0;
            }
        }
    };
    $scope.termData = {
        start: 0,
        change: 0,
        end: 0
    };

    function loadTermChart() {
        Highcharts.chart('termcontainer', {

            chart: {
                type: 'gauge',
                plotBackgroundColor: 'grey',
                plotBackgroundImage: null,
                plotBorderWidth: 0,
                plotShadow: false
            },

            title: {
                text: 'Term'
            },

            pane: {
                startAngle: -150,
                endAngle: 150,
                background: [{
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#FFF'],
                            [1, '#333']
                        ]
                    },
                    borderWidth: 0,
                    outerRadius: '109%'
                }, {
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#333'],
                            [1, '#FFF']
                        ]
                    },
                    borderWidth: 1,
                    outerRadius: '107%'
                }, {
                    // default background
                }, {
                    backgroundColor: '#DDD',
                    borderWidth: 0,
                    outerRadius: '105%',
                    innerRadius: '103%'
                }]
            },

            // the value axis
            yAxis: {
                min: 0,
                max: 200,

                minorTickInterval: 'auto',
                minorTickWidth: 1,
                minorTickLength: 10,
                minorTickPosition: 'inside',
                minorTickColor: '#666',

                tickPixelInterval: 30,
                tickWidth: 2,
                tickPosition: 'inside',
                tickLength: 10,
                tickColor: '#666',
                labels: {
                    step: 2,
                    rotation: 'auto'
                },
                title: {
                    text: 'km/h'
                },
                plotBands: [{
                    from: 0,
                    to: 120,
                    color: '#55BF3B' // green
                }, {
                    from: 120,
                    to: 160,
                    color: '#DDDF0D' // yellow
                }, {
                    from: 160,
                    to: 200,
                    color: '#DF5353' // red
                }]
            },

            series: [{
                name: 'Speed',
                data: [80],
                tooltip: {
                    valueSuffix: ' km/h'
                }
            }]

        },
        // Add some life
        function (chart) {
            if (!chart.renderer.forExport) {
                $scope.termChart = chart;
                $scope.changeTermPoint();
            }
        });
    }

    function changeTermPoint() {
      var point = $scope.termChart.series[0].points[0];
      $scope.termData.change = $scope.term_slider_callbacks.value;
      point.update($scope.term_slider_callbacks.value);
    }

    $scope.loadTermChart();

    //Down montly
    $scope.loadMontlyChart = loadMontlyChart;
    $scope.changeMontlyPoint = changeMontlyPoint;
    $scope.montlyChart = null;

    $scope.montly_slider_callbacks = {
        value: 0,
        options: {
            floor: 0,
            ceil: 200,
            onStart: function () {
                $scope.montlyData.start = 0;
            },
            onChange: changeMontlyPoint,
            onEnd: function () {
                $scope.montlyData.end = 0;
            }
        }
    };
    $scope.montlyData = {
        start: 0,
        change: 0,
        end: 0
    };

    function loadMontlyChart() {
        Highcharts.chart('montlycontainer', {

            chart: {
                type: 'gauge',
                plotBackgroundColor: 'grey',
                plotBackgroundImage: null,
                plotBorderWidth: 0,
                plotShadow: false
            },

            title: {
                text: 'Montly Payment'
            },

            pane: {
                startAngle: -150,
                endAngle: 150,
                background: [{
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#FFF'],
                            [1, '#333']
                        ]
                    },
                    borderWidth: 0,
                    outerRadius: '109%'
                }, {
                    backgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#333'],
                            [1, '#FFF']
                        ]
                    },
                    borderWidth: 1,
                    outerRadius: '107%'
                }, {
                    // default background
                }, {
                    backgroundColor: '#DDD',
                    borderWidth: 0,
                    outerRadius: '105%',
                    innerRadius: '103%'
                }]
            },

            // the value axis
            yAxis: {
                min: 0,
                max: 200,

                minorTickInterval: 'auto',
                minorTickWidth: 1,
                minorTickLength: 10,
                minorTickPosition: 'inside',
                minorTickColor: '#666',

                tickPixelInterval: 30,
                tickWidth: 2,
                tickPosition: 'inside',
                tickLength: 10,
                tickColor: '#666',
                labels: {
                    step: 2,
                    rotation: 'auto'
                },
                title: {
                    text: 'km/h'
                },
                plotBands: [{
                    from: 0,
                    to: 120,
                    color: '#55BF3B' // green
                }, {
                    from: 120,
                    to: 160,
                    color: '#DDDF0D' // yellow
                }, {
                    from: 160,
                    to: 200,
                    color: '#DF5353' // red
                }]
            },

            series: [{
                name: 'Speed',
                data: [80],
                tooltip: {
                    valueSuffix: ' km/h'
                }
            }]

        },
        // Add some life
        function (chart) {
            if (!chart.renderer.forExport) {
                $scope.montlyChart = chart;
                $scope.changeMontlyPoint();
            }
        });
    }

    function changeMontlyPoint() {
      var point = $scope.montlyChart.series[0].points[0];
      $scope.montlyData.change = $scope.montly_slider_callbacks.value;
      point.update($scope.montly_slider_callbacks.value);
    }

    $scope.loadMontlyChart();
});

</script>
</head>
<body>
  <div ng-app="rzSliderDemo">
    <div ng-controller="MainCtrl" class="wrapper">
      <div class="row">
        <!-- payment -->
        <article class="col-sm-4">
          <div id="paymentcontainer" style="min-width: 310px; max-width: 400px; height: 300px; margin: 0 auto"></div>
           <p>Down payment: {{ paymentData.change }}</p>
           <rzslider rz-slider-model="payment_slider_callbacks.value" rz-slider-options="payment_slider_callbacks.options"></rzslider>
       </article>
       <!-- term -->
       <article class="col-sm-4">
         <div id="termcontainer" style="min-width: 310px; max-width: 400px; height: 300px; margin: 0 auto"></div>
          <p>term: {{ termData.change }}</p>
          <rzslider rz-slider-model="term_slider_callbacks.value" rz-slider-options="term_slider_callbacks.options"></rzslider>
      </article>
      <!-- term -->
      <article class="col-sm-4">
        <div id="montlycontainer" style="min-width: 310px; max-width: 400px; height: 300px; margin: 0 auto"></div>
         <p>Montly Payment: {{ termData.change }}</p>
         <rzslider rz-slider-model="montly_slider_callbacks.value" rz-slider-options="montly_slider_callbacks.options"></rzslider>
     </article>
     </div>
    </div>
  </div>
</body>
</html>
